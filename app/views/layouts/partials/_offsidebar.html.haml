/ START Off Sidebar (right)
%nav
  %h3.text-center.text-thin
    = t '.profile'
  %ul.nav
    %li.user-block
      / User picture
      .user-block-picture
        .user-block-status
          %img.img-thumbnail.img-circle{:alt => "Avatar", :height => "60", :src => image_path('konsento.png'), :width => "60"}/
          .circle.circle-success.circle-lg
      / Name and Job
      .user-block-info
        .user-block-username
          = current_user.username
        .user-block-email
          = current_user.email
    %li.item-link
      = link_to edit_user_path(current_user) do
        %em.icon-pencil
        %span= t '.edit_profile'
    %li.item-link
      = link_to invitations_path do
        %em.icon-paper-plane
        %span
          = Invitation.model_name.human(count: 2)
    %li.item-link
      = link_to index_requirement_values_path do
        %em.icon-tag
        %span= RequirementValue.model_name.human(count: 2)
    %li.item-link
      = link_to sign_out_path, :method => :delete do
        %em.icon-logout
        %span= t 'layouts.application.sign_out'
