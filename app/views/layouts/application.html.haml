!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}/
    = display_meta_tags og: { title: 'Konsento: Rekta Demokratio Apertfonta', site_name: 'Konsento', type: 'website', url: 'http://konsento.org', image: 'http://konsento.org/img/og-logo.png', description: 'Direct Democracy Open Source / Democracia Direta Código Aberto / Democracia Directa Código Abierto' }
    %title Konsento
    / =============== VENDOR STYLES ===============
    = stylesheet_link_tag 'base'
    / =============== VIEW VENDOR STYLES ===============
    -# = stylesheet_link_tag_for_action
    / =============== APP STYLES ===============
    = stylesheet_link_tag 'application', media: 'all', id: "maincss"
    = csrf_meta_tags

    %script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-60734376-2', 'auto');
      ga('send', 'pageview');
  %body.layout-h
    .wrapper
      / top navbar
      %header.topnavbar-wrapper= render partial: "layouts/partials/topnavbar"
      / Breandcrumbs Bar
      = render partial: "layouts/partials/breadcrumbsbar"
      - if signed_in?
        / offsidebar
        %aside.offsidebar.hide= render partial: "layouts/partials/offsidebar"

      / Main section
      %section
        .flash-messages
          - flash.each do |key, message|
            .alert.alert-info.alert-dismissible.fade.in{:role => "alert"}
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
                %span{"aria-hidden" => "true"} ×
              %strong= message
        / Page content
        .content-wrapper
          = yield
      / Page footer
      %footer= render partial: "layouts/partials/footer"

    - if content_for? :body_end
      = yield :body_end

    / =============== VENDOR SCRIPTS ===============
    = javascript_include_tag 'base'
    / =============== GON =======================
    = include_gon(camel_case: true)
    / =============== APP SCRIPTS ===============
    = javascript_include_tag 'application'
